@inject AppInfoVo appInfoVo
@{
    var appName = appInfoVo.AppName;
    var request = this.Context.Request;
    var currentPath = $"{request.PathBase}{request.Path}";
    var title = appName + $" - [{ViewData["Title"] ?? currentPath}]";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link href="~/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/libs/prism/theme/ocodia.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">@appName</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <partial name="_AutoPageMenu"></partial>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span> &copy; 2023 - @appName</span>
        </div>
    </footer>

    <script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/libs/prism/prism.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_DebugInfo"></partial>
</body>
</html>